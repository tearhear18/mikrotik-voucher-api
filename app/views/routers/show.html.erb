<%= render 'shared/header' %>
<%= render 'shared/sidemenu' %>

<!-- Content Wrapper -->
<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <h1><%= @router.name%></h1>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <!-- Router Connection Info -->
        <div class="col-md-4">
          <div class="card card-info card-outline mb-3">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-network-wired"></i> Connection</h3>
              <div class="card-tools">
                <button type="button" class="btn btn-xs btn-secondary" data-toggle="modal" data-target="#editRouterModal">
                  <i class="fas fa-edit"></i> Edit
                </button>
              </div>
            </div>
            <div class="card-body p-2">
              <dl class="row mb-0">
                <dt class="col-5">Host</dt>
                <dd class="col-7"><%= @router.host_name %></dd>
                <dt class="col-5">Port</dt>
                <dd class="col-7">
                  <span class="badge badge-<%= @router.port && @router.port != 22 ? 'warning' : 'secondary' %>">
                    <%= @router.port || 22 %>
                  </span>
                </dd>
                <dt class="col-5">Username</dt>
                <dd class="col-7"><%= @router.username %></dd>
                <dt class="col-5">Password</dt>
                <dd class="col-7">******</dd>
              </dl>
            </div>
          </div>

          <!-- Device Info Card -->
          <%= render partial: 'device_info_card', locals: { device_info: (@router.raw_data || {})['device_info'], last_updated: (@router.raw_data || {})['last_updated'] } %>

          <!-- Hotspot Profiles -->
          <div class="card card-success card-outline mb-3">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-user-shield"></i> Hotspot Profiles</h3>
              <div class="card-tools">
                <button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#createHotspotProfileModal">
                  <i class="fas fa-plus"></i> Add
                </button>
              </div>
            </div>
            <div class="card-body p-2">
              <table class="table table-sm table-bordered table-striped mb-0">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Rate</th>
                  </tr>
                </thead>
                <tbody>
                  <% @profiles.each do |profile| %>
                    <tr>
                      <td><%= profile.id %></td>
                      <td><%= profile.name %></td>
                      <td><%= profile.rate %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Stations List -->
        <div class="col-md-8">
          <div class="card card-primary card-outline">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-broadcast-tower"></i> Stations <span class="badge badge-info"><%= @stations.size %></span></h3>
              <div class="card-tools">  
                <button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#newStationModal">
                  <i class="fas fa-plus"></i> New
                </button>
              </div>
            </div>
            <div class="card-body p-2">
              <table class="table table-bordered table-striped table-hover">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Prefix</th>
                  </tr>
                </thead>
                <tbody>
                  <% @stations.each do |station| %>
                    <tr>
                      <td><%= station.id %></td>
                      <td><%= link_to station.name, router_station_path(@router, station) %></td>
                      <td><%= station.prefix.upcase %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<%= render 'shared/footer' %>


<div class="modal" id="newStationModal" tabindex="-1" role="dialog" aria-labelledby="newStationModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(model: [@router, Station.new], local: true) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="newStationModalLabel">Add Station to Router</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :prefix %>
            <%= form.text_field :prefix, class: 'form-control', maxlength: 2, pattern: '[A-Za-z]{2}', title: 'Only 2 letters allowed' %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <%= form.submit 'Create Station', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal" id="createHotspotProfileModal" tabindex="-1" role="dialog" aria-labelledby="createHotspotProfileModallLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(model: [@router, @router.hotspot_profiles.new], local: true) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="createHotspotProfileModallLabel">Add User Profile</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :rate %>
            <%= form.select :rate, Router.bandwidth_options, { include_blank: false, prompt: '- Speed -'}, class: 'form-control' %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <%= form.submit 'Create Profile', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Edit Router Modal -->
<div class="modal" id="editRouterModal" tabindex="-1" role="dialog" aria-labelledby="editRouterModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(model: @router, url: router_path(@router), method: :patch, local: true) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="editRouterModalLabel">Edit Router Connection</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= form.label :host_name %>
            <%= form.text_field :host_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :port %>
            <%= form.number_field :port, class: 'form-control', min: 1, max: 65535, placeholder: '22 (default)' %>
          </div>
          <div class="form-group">
            <%= form.label :username %>
            <%= form.text_field :username, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :password %>
            <%= form.password_field :password, class: 'form-control', value: @router.password %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <%= form.submit 'Save Changes', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


