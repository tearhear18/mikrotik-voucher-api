<div class="container mt-4">
  <div class="row">

    <!-- Total Events -->
    <div class="col-md-3 mb-4">
      <div class="card text-white bg-primary shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Total Sales</h5>
          <h2>₱ <%=number_with_delimiter Voucher.sum(:amount)%></h2>
        </div>
      </div>
    </div>

    <!-- Total Logins -->
    
    <div class="col-md-3 mb-4">
      <div class="card text-white bg-info shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Daily Sales</h5>
          <h2>₱ <%=number_with_delimiter @todays_vouchers.sum(:amount) %></h2>
        </div>
      </div>
    </div>

    <div class="col-md-3 mb-4">
      <div class="card text-white bg-success shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Total Collected</h5>
          <h2>₱ <%=number_with_delimiter Voucher.collected.sum(:amount)%></h2>
        </div>
      </div>
    </div>

    <!-- Total Logouts -->
    <div class="col-md-3 mb-4">
      <div class="card text-white bg-danger shadow-sm">
        <div class="card-body">
          <h5 class="card-title">Total Collectibles</h5>
          <h2>₱ <%=number_with_delimiter Voucher.not_collected.sum(:amount)%></h2>
        </div>
      </div>
    </div>

  </div>


  <div class="row">
    <div class="col-4">
      <h5>Over All Login Traffic Stats</h5>
      <%= line_chart [
        { name: "Login", data: @login_counts },
        { name: "Logout", data: @logout_counts }
      ], xtitle: "Time (Hour)", ytitle: "Event Count", curve: true %>
    </div>

    <div class="col-8">
      <h5>Per Station Daily Sales</h5>
      <%= column_chart @per_station_daily_sales.map { |date, agents| { name: date, data: agents } }, ytitle: "Station Sale" %>
    </div>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Station Name</th>
        <th>Prefix</th>
        <th>Sold Voucher</th>
        <th>Total Sales</th>
        <th>Total Uncollected</th>
        <th>Total Collected</th>
      </tr>
    </thead>
    <tbody>
      <% @stations.each do |station| %>
        <tr>
          <td><%=link_to station.name, station_path(station)%></td>
          <td><%= station.prefix %></td>
          <td><%= station.vouchers.count %></td>
          <td><%= station.vouchers.sum(:amount) %></td>
          <td><%= station.vouchers.not_collected.sum(:amount) %></td>
          <td><%= station.vouchers.collected.sum(:amount) %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="2" class="text-right"></td>
        <td><%= Voucher.count%></td>
        <td><%= Voucher.sum(:amount) %></td>
        <td><%= Voucher.not_collected.sum(:amount) %></td>
        <td><%= Voucher.collected.sum(:amount) %></td>
      </tr>
    </tbody>
  </table>
</div>

<% if @stations.empty? %>
  <div class="alert alert-info" role="alert">
    No stations found.
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>