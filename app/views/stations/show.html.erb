<%= render 'shared/header' %>
<%= render 'shared/sidemenu' %>

<!-- Content Wrapper -->
<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <h1><%= @router.name%> / <%= @station.name %> (<%= @station.prefix %>)</h1>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <div class="card-tools">
                <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#newVouchersModal">Generate Voucher</button>
              </div>
            </div>
            <div class="card-body">
              asd
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<%= render 'shared/footer' %>

<div class="modal" id="newVouchersModal" tabindex="-1" role="dialog" aria-labelledby="newVouchersModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(model: Station.new, url: stations_path, local: true) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="newStationModalLabel">Add Station to Router</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <div class="form-group">
            <%= form.label :router %>
            <%= form.select :router_id, @current_user.routers.collect { |r| [r.name, r.id] }, { include_blank: false, prompt: '- Select Router -'}, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :prefix %>
            <%= form.text_field :prefix, class: 'form-control', maxlength: 2, pattern: '[A-Za-z]{2}', title: 'Only 2 letters allowed' %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <%= form.submit 'Create Station', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
