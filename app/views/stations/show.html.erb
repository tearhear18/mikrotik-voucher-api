<%= render 'shared/header' %>
<%= render 'shared/sidemenu' %>

<!-- Content Wrapper -->
<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <h1><%= @router.name%> / <%= @station.name %> (<%= @station.prefix %>)</h1>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <div class="card-tools">
                <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#newVouchersModal">Generate Voucher</button>
              </div>
            </div>
            <div class="card-body">
              <h5>Vouchers</h5>
              <table class="table table-bordered table-sm">
                <thead>
                  <tr>
                    <th>Code</th>
                    <th>Hotspot Profile</th>
                    <th>Limit Update</th>
                    <th>Created At</th>
                  </tr>
                </thead>
                <tbody>
                  <% @station.vouchers.each do |voucher| %>
                    <tr>
                      <td><%= voucher.code %></td>
                      <td><%= voucher.hotspot_profile&.name %></td>
                      <td><%= voucher.limit_update %></td>
                      <td><%= voucher.created_at.strftime('%Y-%m-%d %H:%M') %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<%= render 'shared/footer' %>

<div class="modal" id="newVouchersModal" tabindex="-1" role="dialog" aria-labelledby="newVouchersModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(url: router_station_vouchers_path(@router, @station), method: :post, local: true) do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="newVouchersModalLabel">Generate Vouchers</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <div class="form-group">
            <%= form.label 'voucher[hotspot_profile_id]', 'Hotspot Profile' %>
            <%= form.collection_select 'voucher[hotspot_profile_id]', @router.hotspot_profiles, :id, :name, { prompt: 'Select Profile' }, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label 'voucher[limit_update]', 'Limit Update' %>
            <%= form.text_field 'voucher[limit_update]', class: 'form-control', placeholder: 'e.g. 1h, 2h, 24h' %>
          </div>
          <div class="form-group">
            <%= form.label 'voucher[quantity]', 'How many vouchers?' %>
            <%= form.number_field 'voucher[quantity]', value: 1, min: 1, class: 'form-control' %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <%= form.submit 'Generate', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
