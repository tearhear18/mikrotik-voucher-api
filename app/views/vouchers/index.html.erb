<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>Vouchers</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><%= link_to "Dashboard", root_path %></li>
          <li class="breadcrumb-item active">Vouchers</li>
        </ol>
      </div>
    </div>
  </div>
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    
    <!-- Stats Cards Row -->
    <div class="row">
      <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
          <div class="inner">
            <h3>₱<%= @total_amount %></h3>
            <p>Total Value</p>
          </div>
          <div class="icon">
            <i class="fas fa-dollar-sign"></i>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
          <div class="inner">
            <h3>₱<%= @collected_amount %></h3>
            <p>Collected</p>
          </div>
          <div class="icon">
            <i class="fas fa-check-circle"></i>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
          <div class="inner">
            <h3>₱<%= @uncollected_amount %></h3>
            <p>Uncollected</p>
          </div>
          <div class="icon">
            <i class="fas fa-clock"></i>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
          <div class="inner">
            <h3><%= @vouchers.total_count if @vouchers.respond_to?(:total_count) %></h3>
            <p>Total Count</p>
          </div>
          <div class="icon">
            <i class="fas fa-ticket-alt"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Vouchers Table -->
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Voucher List</h3>
            <div class="card-tools">
              <!-- Search form -->
              <%= form_with url: vouchers_path, method: :get, local: true, class: "form-inline" do |form| %>
                <div class="input-group input-group-sm" style="width: 150px;">
                  <%= form.text_field :search, class: "form-control float-right", placeholder: "Search", value: params[:search] %>
                  <div class="input-group-append">
                    <%= form.submit "Search", class: "btn btn-default" %>
                    <i class="fas fa-search"></i>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <div class="card-body table-responsive p-0">
            <table class="table table-hover text-nowrap">
              <thead>
                <tr>
                  <th>Code</th>
                  <th>Station</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Hotspot Profile</th>
                  <th>Created</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if @vouchers.any? %>
                  <% @vouchers.each do |voucher| %>
                    <tr>
                      <td>
                        <strong><%= voucher.code %></strong>
                      </td>
                      <td>
                        <span class="badge badge-secondary"><%= voucher.station_name %></span>
                      </td>
                      <td>
                        <span class="text-success">₱<%= voucher.amount %></span>
                      </td>
                      <td>
                        <% if voucher.collected? %>
                          <span class="badge badge-success">
                            <i class="fas fa-check"></i> Collected
                          </span>
                        <% else %>
                          <span class="badge badge-warning">
                            <i class="fas fa-clock"></i> Available
                          </span>
                        <% end %>
                      </td>
                      <td>
                        <% if voucher.hotspot_profile %>
                          <span class="badge badge-info"><%= voucher.hotspot_profile.name %></span>
                        <% else %>
                          <span class="text-muted">Legacy</span>
                        <% end %>
                      </td>
                      <td>
                        <small class="text-muted"><%= time_ago_in_words(voucher.created_at) %> ago</small>
                      </td>
                      <td>
                        <div class="btn-group btn-group-sm">
                          <%= link_to voucher_path(voucher), class: "btn btn-info btn-sm" do %>
                            <i class="fas fa-eye"></i>
                          <% end %>
                          
                          <% unless voucher.collected? %>
                            <%= link_to collect_voucher_path(voucher), method: :patch, class: "btn btn-success btn-sm", 
                                title: "Mark as Collected", 
                                data: { confirm: "Mark this voucher as collected?" } do %>
                              <i class="fas fa-check"></i>
                            <% end %>
                          <% else %>
                            <%= link_to uncollect_voucher_path(voucher), method: :patch, class: "btn btn-warning btn-sm", 
                                title: "Mark as Uncollected", 
                                data: { confirm: "Mark this voucher as uncollected?" } do %>
                              <i class="fas fa-undo"></i>
                            <% end %>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                <% else %>
                  <tr>
                    <td colspan="7" class="text-center text-muted">
                      <div class="p-4">
                        <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                        <p>No vouchers found</p>
                        <% if current_user.routers.any? %>
                          <%= link_to "Create Vouchers", routers_path, class: "btn btn-primary" %>
                        <% else %>
                          <%= link_to "Add Router First", routers_path, class: "btn btn-primary" %>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- Pagination -->
          <% if @vouchers.respond_to?(:current_page) && @vouchers.total_pages > 1 %>
            <div class="card-footer clearfix">
              <%= paginate @vouchers, theme: 'twitter-bootstrap-4' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</section>